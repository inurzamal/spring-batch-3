CREATE TABLE MCCS_BATCH_JOB_INSTANCE  (
  JOB_INSTANCE_ID NUMBER(38)  NOT NULL ,
  VERSION NUMBER(38),
  JOB_NAME VARCHAR(100) NOT NULL ,
  JOB_KEY VARCHAR(2500),
  constraint MCCS_BATCH_JOB_INST_PK PRIMARY KEY( JOB_INSTANCE_ID ) using index
);

CREATE TABLE MCCS_BATCH_JOB_EXECUTION  (
  JOB_EXECUTION_ID NUMBER(38)  NOT NULL ,
  VERSION NUMBER(38),
  JOB_INSTANCE_ID NUMBER(38) NOT NULL,
  CREATE_TIME TIMESTAMP NOT NULL,
  START_TIME TIMESTAMP DEFAULT NULL,
  END_TIME TIMESTAMP DEFAULT NULL,
  STATUS VARCHAR(10),
  EXIT_CODE VARCHAR(20),
  EXIT_MESSAGE VARCHAR(2500),
  LAST_UPDATED TIMESTAMP,
  JOB_CONFIGURATION_LOCATION VARCHAR(2500) NULL,
  constraint MCCS_BATCH_JOB_EXEC_PK PRIMARY KEY (JOB_EXECUTION_ID) using index,
  constraint MCCS_JOB_INSTANCE_EXECUTION_FK foreign key (JOB_INSTANCE_ID)
  references MCCS_BATCH_JOB_INSTANCE(JOB_INSTANCE_ID)
);

CREATE TABLE MCCS_BATCH_JOB_EXECUTION_PARAMS  (
	JOB_EXECUTION_ID NUMBER(38) NOT NULL ,
	TYPE_CD VARCHAR(6) NOT NULL ,
	KEY_NAME VARCHAR(100) NOT NULL ,
	STRING_VAL VARCHAR(250) ,
	DATE_VAL TIMESTAMP DEFAULT NULL ,
	LONG_VAL NUMBER(38) ,
	DOUBLE_VAL NUMBER(38) ,
	IDENTIFYING CHAR(1) NOT NULL ,
	constraint MCCS_JOB_EXEC_PARAMS_FK foreign key (JOB_EXECUTION_ID)
	references MCCS_BATCH_JOB_EXECUTION(JOB_EXECUTION_ID)
);

CREATE TABLE MCCS_BATCH_STEP_EXECUTION  (
  STEP_EXECUTION_ID NUMBER(38)  NOT NULL ,
  VERSION NUMBER(38) NOT NULL,
  STEP_NAME VARCHAR(100) NOT NULL,
  JOB_EXECUTION_ID NUMBER NOT NULL,
  START_TIME TIMESTAMP NOT NULL ,
  END_TIME TIMESTAMP DEFAULT NULL,
  STATUS VARCHAR(10),
  COMMIT_COUNT NUMBER(38) ,
  READ_COUNT NUMBER(38) ,
  FILTER_COUNT NUMBER(38) ,
  WRITE_COUNT NUMBER(38) ,
  READ_SKIP_COUNT NUMBER(38) ,
  WRITE_SKIP_COUNT NUMBER(38) ,
  PROCESS_SKIP_COUNT NUMBER(38) ,
  ROLLBACK_COUNT NUMBER(38) ,
  EXIT_CODE VARCHAR(20) ,
  EXIT_MESSAGE VARCHAR(2500) ,
  LAST_UPDATED TIMESTAMP,
  constraint MCCS_BATCH_STEP_EXECUTION_PK PRIMARY KEY (STEP_EXECUTION_ID) using index,
  constraint MCCS_JOB_EXECUTION_STEP_FK foreign key (JOB_EXECUTION_ID)
  references MCCS_BATCH_JOB_EXECUTION(JOB_EXECUTION_ID)
);


CREATE TABLE MCCS_BATCH_JOB_EXECUTION_CONTEXT  (
  JOB_EXECUTION_ID NUMBER(38) NOT NULL,
  SHORT_CONTEXT VARCHAR(2500) NOT NULL,
  SERIALIZED_CONTEXT CLOB,
  constraint MCCS_BATCH_JOB_EXEC_CNTXT_PK PRIMARY KEY (JOB_EXECUTION_ID) using index,
  constraint MCCS_JOB_EXEC_CTX_FK foreign key (JOB_EXECUTION_ID)
  references MCCS_BATCH_JOB_EXECUTION(JOB_EXECUTION_ID)
);

CREATE TABLE MCCS_BATCH_STEP_EXECUTION_CONTEXT  (
  STEP_EXECUTION_ID NUMBER(38) NOT NULL,
  SHORT_CONTEXT VARCHAR(2500) NOT NULL,
  SERIALIZED_CONTEXT CLOB,
  constraint MCCS_BATCH_STEP_EXEC_CNTXT_PK PRIMARY KEY (STEP_EXECUTION_ID) using index,
  constraint MCCS_STEP_EXEC_CTX_FK foreign key (STEP_EXECUTION_ID)
  references MCCS_BATCH_STEP_EXECUTION(STEP_EXECUTION_ID)
);


CREATE SEQUENCE MCCS_BATCH_STEP_EXECUTION_SEQ
     INCREMENT BY 1
     START WITH 1
     MAXVALUE 999999999999999999999999999
     MINVALUE 1
     NOCYCLE
     CACHE 20
     NOORDER;
CREATE SEQUENCE MCCS_BATCH_JOB_EXECUTION_SEQ
     INCREMENT BY 1
     START WITH 1
     MAXVALUE 999999999999999999999999999
     MINVALUE 1
     NOCYCLE
     CACHE 20
     NOORDER;
CREATE SEQUENCE MCCS_BATCH_JOB_SEQ
     INCREMENT BY 1
     START WITH 1
     MAXVALUE 999999999999999999999999999
     MINVALUE 1
     NOCYCLE
     CACHE 20
     NOORDER;

